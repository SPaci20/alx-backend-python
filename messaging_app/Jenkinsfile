pipeline {
    agent any

    tools {
        python 'Python3'   // Requires configuring Python in Jenkins (Manage Jenkins â†’ Global Tool Configuration)
    }

    stages {
        stage('Checkout') {
            steps {
                git credentialsId: 'github-credentials',
                    url: 'https://github.com/SPaci20/alx-backend-python.git',
                    branch: 'main'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'python3 -m venv venv'
                sh '. venv/bin/activate && pip install --upgrade pip pytest'
                sh '. venv/bin/activate && pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh '. venv/bin/activate && pytest --junitxml=report.xml'
            }
            post {
                always {
                    junit 'report.xml'  // publish test results in Jenkins
                }
            }
        }
    }

    triggers {
        // Only manual trigger (no SCM polling or webhook)
    }
}
